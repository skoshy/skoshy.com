{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "typeRoots": ["./src/typings", "./next-env.d.ts"]
  },
  "include": ["./next-env.d.ts", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "src/**/tests/*.ts", "src/**/tests/*.tsx"]
}
